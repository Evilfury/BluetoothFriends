<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    >

    <TextView
        android:id="@+id/deviceview_devicename"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Example_Bluetooth_Friend"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/deviceview_relationshipstatus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dip"
        android:text="Acquaintence"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ProgressBar
        android:id="@+id/deviceview_relationshipprogress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip" />
    
    <TextView
        android:id="@+id/deviceview_relationshipleft"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dip"
        android:text="x to go"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <ListView 
        android:id="@+id/android:list"
        android:paddingTop="10dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:choiceMode="none"
		android:clickable="true" />
    
</LinearLayout>