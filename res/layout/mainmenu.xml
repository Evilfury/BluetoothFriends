        android:id="@+id/mainmenu_button_leaderboard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/mainmenu_leaderboard" />

    <Button
        android:id="@+id/mainmenu_button_settings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/mainmenu_settings" />

